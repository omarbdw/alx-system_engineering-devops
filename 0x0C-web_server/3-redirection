#!/usr/bin/env bash
# This script configures a brand new Ubuntu machine with Nginx

# Install Nginx
apt-get update
apt-get install -y nginx

# Configure Nginx to listen on port 80
sed -i 's/listen 80 default_server;/listen 80;/g' /etc/nginx/sites-available/default

# Restart Nginx without using systemctl
service nginx restart

# Create a temporary index.html file
echo "Hello World!" > /var/www/html/index.html

# Configure Nginx to return the temporary index.html file at the root /
sed -i 's/index index.html index.htm;/index index.html index.htm;\n\tlocation \/ {\n\t\treturn 200 \"Hello World!\";\n\t}/g' /etc/nginx/sites-available/default

# Configure Nginx to redirect /redirect_me to another page with a 301 Moved Permanently status
sed -i 's/location \/ {/location \/redirect_me {\n\treturn 301 https:\/\/example.com;\n}\n\nlocation \/ {\n\treturn 301 \/redirect_me;\n}/g' /etc/nginx/sites-available/default

# Restart Nginx without using systemctl
service nginx restart
